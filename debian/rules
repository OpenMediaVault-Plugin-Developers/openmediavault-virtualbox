#!/usr/bin/make -f

include ./openmediavault.mk

PLUGIN_NAME=virtualbox

clean:
	dh_testdir
	dh_testroot
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_prep
ifneq ($(shell [ -d phpvirtualbox ]; printf $$?), 0)
	wget http://sourceforge.net/projects/phpvirtualbox/files/phpvirtualbox-4.3-1.zip/download -O phpvirtualbox.zip
	unzip phpvirtualbox.zip
	mv phpvirtualbox-4.3-1 phpvirtualbox
	/bin/rm -f phpvirtualbox.zip
	find . -maxdepth 1 -name "phpvirtualbox-*" -type d -exec /bin/mv {} phpvirtualbox \;
endif
	dh_installdirs
	dh_installinit
	dh_install
	chmod +x $(CURDIR)/debian/openmediavault-${PLUGIN_NAME}/usr/share/openmediavault/mkconf/${PLUGIN_NAME}
	chmod +x $(CURDIR)/debian/openmediavault-${PLUGIN_NAME}/usr/share/openmediavault/mkconf/nginx.d/90-${PLUGIN_NAME}
	chmod +x $(CURDIR)/debian/openmediavault-${PLUGIN_NAME}/usr/share/openmediavault/mkconf/php5fpm.d/90-${PLUGIN_NAME}
	patch $(CURDIR)/debian/openmediavault-${PLUGIN_NAME}/usr/share/phpvirtualbox/js/phptest.php $(CURDIR)/patches/fix-missing-header-in-phptest.patch

binary-indep: install omv_clean_scm
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdebconf
	dh_lintian
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:
# We have nothing to do by default.

build:
# We have nothing to do by default.

binary: binary-indep binary-arch
.PHONY: clean binary-indep binary-arch binary install
